{{#each postagens}}

<div class="card">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>{{date}}</small>
    </div>
</div>

{{else}}

    <h5>Nenhuma postagem</h5>

{{/each}}